generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CUSTOMER
}

enum UserType {
  PERSON
  ENTITY
}

model User {
  id             String           @id @default(uuid())
  name           String
  email          String           @unique
  password_hash  String
  phone          String?
  role           Role             @default(CUSTOMER)
  type           UserType         @default(PERSON)
  created_at     DateTime         @default(now())
  SignNewsletter SignNewsletter[]

  @@map("users")
}

model SignNewsletter {
  id         String    @id @default(uuid())
  created_at DateTime  @default(now())
  signed_at  DateTime?

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  @@map("sign_newsletter")
}
